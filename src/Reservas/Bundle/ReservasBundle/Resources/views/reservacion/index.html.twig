{% extends '::base.html.twig' %}

{% block body -%}
    <h1>reservacion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Origen</th>
                <th>Fechareserva</th>
                <th>Fechaida</th>
                <th>Noadultos</th>
                <th>Nochild</th>
                <th>Precio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('reservacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.origen }}</td>
                <td>{% if entity.fechaReserva %}{{ entity.fechaReserva|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaIda %}{{ entity.fechaIda|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.noAdultos }}</td>
                <td>{{ entity.noChild }}</td>
                <td>{{ entity.precio }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('reservacion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('reservacion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('reservacion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
